@model ResultParentModel


@{
	ViewData["Title"] = "Search Results";
}


<div class="text-center">
	<h1 class="display-5">Search Results</h1>
</div>




    <div class="d-flex justify-content-center pt-5>
        <!-- Results Section (Expands Dynamically) -->
        @if(Model != null)
        {
        @if (Model.resultDocuments != null && Model.resultDocuments.Any())
        {
        <div class="border p-3 pt-5 rounded bg-light">
            <div class="results-container">
                @foreach (var result in Model.resultDocuments)
                {
                <div class="card mb-2 shadow-sm w-100">
                        <h2 class="card-title">@result.Item1.DocumentTitle</h2>
                        <h6 class="card-subTitle"> TF/IDF Score: @result.Item2</h6>
				<div class="card-body">
					<p class="card-text">@result.Item1.DocumentContent.Substring(0, 500)</p>
                    </div>
                </div>
                }
            </div>
        </div>
        }
        }
    </div>


    <!-- Custom Styling -->
    <style>
        .results-container {
            max-height: 600px; /* Adjust height as needed */
            overflow-y: auto;
            padding-right: 10px; /* Prevent scrollbar from overlapping content */
        }

        .card {
            background-color: #aaaaaa;
            border: 4px solid #007bff; /* Accent border for a modern look */
        }

        .card-body {
            background-color: #ffffff;
        }
    </style>


